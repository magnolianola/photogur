<h1>Photogur</h1>
<h2>Welcome! Here you can add, edit, and delete photos at your leisure. Enjoy your stay.</h2>
<%= link_to "[New Picture]", "/pictures/new" %>

<h2>Pictures in Alphabetical order</h2>
<ul>
	<% @pictures.each do |picture| %>
		<li><%= picture.title %></li>
<% end %>
</ul>

<% @pictures.each do |picture| %>
	<p><%= picture[:title] %>, <%= picture[:artist] %></p>
	<img src="<%= picture[:url] %>"><br>
	<%= link_to "[Edit Picture]", edit_picture_path(picture) %>
	<%= link_to "[Delete Picture]", picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>
<% end %>
